# ============================================================
# Application
# ============================================================
APP_ENV=local
LOG_LEVEL=INFO

# ============================================================
# Data Source
# ============================================================
# sample | databricks
DATA_SOURCE=sample
REFERENCE_DIR=data/reference
SAMPLE_DATA_FILE=data/sample/sample_vin_data.json

# Optional mart table overrides
MART_MH_TABLE=mart_mh_hi_snapshot_daily
MART_MP_TABLE=mart_mp_triggers_daily
MART_FIM_TABLE=mart_fim_rootcause_daily
MART_COHORT_METRICS_TABLE=mart_cohort_metrics_daily
MART_COHORT_ANOMALIES_TABLE=mart_cohort_anomalies_daily

# ============================================================
# Databricks Unity Catalog (required if DATA_SOURCE=databricks)
# ============================================================
DATABRICKS_HOST=https://<workspace>.cloud.databricks.com
DATABRICKS_HTTP_PATH=/sql/1.0/warehouses/<warehouse-id>
DATABRICKS_TOKEN=<databricks-token>
DATABRICKS_CATALOG=main
DATABRICKS_SCHEMA=predictive_marts

# ============================================================
# LLM Runtime (optional)
# provider: none | openai | openai_compatible
# ============================================================
LLM_PROVIDER=none
LLM_API_KEY=
LLM_BASE_URL=
LLM_MODEL=gpt-4.1-mini
LLM_TEMPERATURE=0.2
LLM_MAX_TOKENS=1024

# Backward-compatible OpenAI aliases (optional)
OPENAI_API_KEY=
OPENAI_MODEL=gpt-4.1-mini
OPENAI_TEMPERATURE=0.2
OPENAI_MAX_TOKENS=1024

# ============================================================
# Feature Flags
# ============================================================
FEATURE_GENAI=true
FEATURE_LANGGRAPH=true
FEATURE_ALLOW_DETERMINISTIC_FALLBACK=false
FEATURE_PDF=true
FEATURE_EMAIL=false

# ============================================================
# SMTP (optional)
# ============================================================
EMAIL_ENABLED=false
SMTP_HOST=smtp.your-company.com
SMTP_PORT=587
SMTP_USERNAME=
SMTP_PASSWORD=
EMAIL_FROM=genai-platform@your-company.com

# ============================================================
# Frontend Clients
# ============================================================
NEXT_PUBLIC_API_BASE_URL=http://localhost:8000
API_BASE_URL=http://localhost:8000
